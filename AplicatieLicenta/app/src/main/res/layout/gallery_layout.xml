<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">


        <com.example.ionut.licenta.Data.CustomNetworkImageView
            android:id="@+id/NIV_gallery"
            android:layout_width="150dp"
            android:layout_height="190dp" />

        <TextView
            android:id="@+id/TV_Picture_Description"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/NIV_gallery"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ToggleButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/state"
            android:id="@+id/button_like"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/TV_Picture_Description"
            android:layout_below="@+id/NIV_gallery" />

    </RelativeLayout>

</LinearLayout>